<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.chenlin.dp.modules.biz.site.dao.DefaultRoomMapper">
	
	<select id="listForPage" resultType="net.chenlin.dp.modules.biz.site.entity.DefaultRoomEntity">
		SELECT
			`id`, 
			`room_id`
		FROM
			default_room
		where
		1=1
		<if test="id != null"> and `id` = #{id} </if>
		<if test="room_id != null"> and `room_id` = #{room_id} </if>
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO default_room (
			`id`, 
			`room_id`
		)
		VALUES (
			#{id}, 
			#{room_id}
		)
	</insert>
	
	<select id="getObjectById" resultType="net.chenlin.dp.modules.biz.site.entity.DefaultRoomEntity">
		SELECT
			`id`, 
			`room_id`
		FROM
			default_room
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE default_room
	 	<set>
			<if test="room_id != null">`room_id` = #{room_id}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			default_room
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>