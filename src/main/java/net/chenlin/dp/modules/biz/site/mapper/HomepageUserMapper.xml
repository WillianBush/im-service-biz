<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.chenlin.dp.modules.biz.site.dao.HomepageUserMapper">
	
	<select id="listForPage" resultType="net.chenlin.dp.modules.biz.site.entity.HomepageUserEntity">
		SELECT
			hpu.`id`,
			hpu.`member_id`,
			m.`nickName`,
			hpu.`out_link_id`,
			hpu.`status`,
			hp.`name` as out_link_name
		FROM
			homepage_user hpu
		left join homepage hp on hpu.`out_link_id` = hp.`id`
		left join  member m on hpu.`member_id` = m.`memberId`
		where
		1=1
		<if test="id != null"> and hpu.`id` = #{id} </if>
		<if test="member_id != null"> and hpu.`member_id` = #{member_id} </if>
		<if test="out_link_id != null"> and hpu.`out_link_id` = #{out_link_id} </if>
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO homepage_user (
			`id`,
			`member_id`,
			`out_link_id`,
			`status`
		)
		VALUES (
			#{id}, 
			#{member_id},
			#{out_link_id},
			#{status}
		)
	</insert>
	
	<select id="getObjectById" resultType="net.chenlin.dp.modules.biz.site.entity.HomepageUserEntity">
		SELECT
			`id`,
			`member_id`,
			`out_link_id`,
			`status`
		FROM
			homepage_user
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE homepage_user
	 	<set>
			<if test="status != null">`status` = #{status} </if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			homepage_user
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>