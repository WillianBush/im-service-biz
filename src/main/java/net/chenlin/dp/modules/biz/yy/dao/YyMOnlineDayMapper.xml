<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.chenlin.dp.modules.biz.yy.dao.YyMOnlineDayMapper">
	
	<select id="listForPage" resultType="net.chenlin.dp.modules.biz.yy.entity.YyMOnlineDayEntity">
		SELECT
			`id`, 
			`create_time`, 
			`m_online_number`
		FROM
			yy_m_online_day
		where
		1=1
		<if test="id != null"> and `id` = #{id} </if>
		<if test="create_time != null"> and `create_time` = #{create_time} </if>
		<if test="m_online_number != null"> and `m_online_number` = #{m_online_number} </if>
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO yy_m_online_day (
			`id`, 
			`create_time`, 
			`m_online_number`
		)
		VALUES (
			#{id}, 
			#{create_time}, 
			#{m_online_number}
		)
	</insert>
	
	<select id="getObjectById" resultType="net.chenlin.dp.modules.biz.yy.entity.YyMOnlineDayEntity">
		SELECT
			`id`, 
			`create_time`, 
			`m_online_number`
		FROM
			yy_m_online_day
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE yy_m_online_day
	 	<set>
			<if test="create_time != null">`create_time` = #{create_time}, </if>
			<if test="m_online_number != null">`m_online_number` = #{m_online_number}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			yy_m_online_day
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>