<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.chenlin.dp.modules.biz.bussiness.dao.YyPersonalMsgDayMapper">
	
	<select id="listForPage" resultType="net.chenlin.dp.modules.biz.bussiness.entity.YyPersonalMsgDayEntity">
		SELECT
			`id`, 
			`personal_message_total`, 
			`create_time`
		FROM
			yy_personal_msg_day
		where
		1=1
		<if test="id != null"> and `id` = #{id} </if>
		<if test="personal_message_total != null"> and `personal_message_total` = #{personal_message_total} </if>
		<if test="create_time != null"> and `create_time` = #{create_time} </if>
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO yy_personal_msg_day (
			`id`, 
			`personal_message_total`, 
			`create_time`
		)
		VALUES (
			#{id}, 
			#{personal_message_total}, 
			#{create_time}
		)
	</insert>
	
	<select id="getObjectById" resultType="net.chenlin.dp.modules.biz.bussiness.entity.YyPersonalMsgDayEntity">
		SELECT
			`id`, 
			`personal_message_total`, 
			`create_time`
		FROM
			yy_personal_msg_day
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE yy_personal_msg_day
	 	<set>
			<if test="personal_message_total != null">`personal_message_total` = #{personal_message_total}, </if>
			<if test="create_time != null">`create_time` = #{create_time}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			yy_personal_msg_day
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>